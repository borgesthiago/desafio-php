{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
 <div class="espaco">
    <h3>Listagem de Usuários</h3>
    <table class="ui celled table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>                
                <td>
                <div class="ui small basic icon buttons">
                    <a href="{{ path('user_ver', {'id': user.id}) }}"><button class="ui button"><i class="file icon"></i></button></a>
                    <a href="{{ path('user_editar', {'id': user.id}) }}"><button class="ui button"><i class="edit icon"></i></button></a>
                     {% if is_granted('ROLE_ADMIN') %}
                     <a href="{{ path('user_delete', {'id': user.id}) }}"><button class="ui button"><i class="trash icon"></i></button></a>
                     {% endif %}
                </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">nenhum registro encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
