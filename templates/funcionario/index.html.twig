{% extends 'base.html.twig' %}

{% block title %}Funcionario{% endblock %}

{% block body %}
    <h3>Listagem de Funcionarios</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Matricula</th>
                <th>Cpf</th>
                <th>Endereco</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for funcionario in funcionarios %}
            <tr>
                <td>{{ funcionario.id }}</td>
                <td>{{ funcionario.nome }}</td>
                <td>{{ funcionario.matricula }}</td>
                <td>{{ funcionario.cpf }}</td>
                <td>{{ funcionario.endereco }}</td>
                <td>
                    <a href="{{ path('funcionario_ver', {'id': funcionario.id}) }}"><i class="fa fa-file-alt" aria-hidden="true"></i></a>
                    <a href="{{ path('funcionario_editar', {'id': funcionario.id}) }}"><i class="fa fa-edit" aria-hidden="true"></i></a>
                    <a href="{{ path('funcionario_delete', {'id': funcionario.id}) }}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
                <td colspan="6">nenhum registro encontrado</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('funcionario_novo') }}"><button type="button" class="btn btn-info"><i class="fa fa-plus-circle" aria-hidden="true"></i> Novo</button></a>
{% endblock %}